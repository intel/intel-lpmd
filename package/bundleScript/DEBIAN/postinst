pkgdir="/usr/share/ia_pkg/ileo"
pkgfile="/usr/share/ia_pkg/ileo/pkg.opt.ileo.x86_64.tar.gz"

if [ -f "$pkgfile" ]; then
	tar -zxvf $pkgfile -C $pkgdir		
	if [ -n "ls $pkgdir/pkg.OPT.ILEO*x86_64" ]; then
		cd $pkgdir/pkg.OPT.ILEO*x86_64				
		sudo ./deploy.sh debinstall
	else
		echo "untared folder does not exist"
	fi
else
	echo "package install file does not exist"
	exit 1
fi
	
 